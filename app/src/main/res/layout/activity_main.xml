<com.ld.shushnet.CustomScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/myScroll"
android:layout_width="match_parent"
android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:id="@+id/CardView1"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="0dp"
                android:text="Restor For"
                android:padding="20dp"
                android:gravity="left"



                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:typeface="sans"
                android:textStyle="normal"
                android:textAllCaps="false" />

    <Switch
        android:id="@+id/Switchwifi"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="Wi-fi"
        android:padding="20dp"


        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:textStyle="normal"
        android:textAllCaps="false" />
            <Switch
                android:id="@+id/SwitchBlue"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:padding="20dp"

                android:text="Bluetooth"


                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:typeface="sans"
                android:textStyle="normal"
                android:textAllCaps="false"
                />

            <Switch
                android:id="@+id/SwitchRing"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="10dp"
                android:padding="20dp"

                android:text="Ring Mode"


                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:typeface="sans"
                android:textStyle="normal"
                android:textAllCaps="false"
                />







        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/CardView2"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"


            >


        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:layout_marginTop="40dp"
            android:padding="0dp"

            />



        <ToggleButton
            android:id="@+id/sr_toggle_btmn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="START"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="40dp"

            android:textOff="Start"
            android:textOn="Stop"
            android:textColor="#FFFF"
            android:textSize="50dp"
            android:shadowColor="@color/colorAccent"
            android:background="@drawable/sr_toggle_btmn"


            android:fontFamily="sans-serif"
            android:typeface="sans"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textAllCaps="false" />

 </android.support.v7.widget.CardView>

    </LinearLayout>
</com.ld.shushnet.CustomScrollView>
